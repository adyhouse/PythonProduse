# WooCommerce Configuration
WOOCOMMERCE_URL=https://webgsm.ro
WOOCOMMERCE_CONSUMER_KEY=your_consumer_key_here
WOOCOMMERCE_CONSUMER_SECRET=your_consumer_secret_here

# Source Website
SOURCE_URL=https://mobilesentrix.eu

# Currency Conversion
CURRENCY_FROM=EUR
CURRENCY_TO=RON

# Ollama (traducere/adaptare nume slug sau tip "Componentă")
# Scriptul rulează pe Windows; Ollama poate fi pe alt PC/Mac în rețea (ex. 10.1.77.2).
# Lăsați OLLAMA_URL gol pentru a folosi doar Google Translate.
OLLAMA_URL=http://10.1.77.2:11434
OLLAMA_MODEL=llama3.1:latest
# Timeout în secunde pentru apeluri Ollama (rețea/model încărcare). Implicit 300.
OLLAMA_TIMEOUT=300

# WordPress Media Upload (imagini pe site) – NU e același lucru cu WooCommerce API!
# WooCommerce Key/Secret = pentru produse/comenzi. WP_APP_PASSWORD = doar pentru upload poze.
# Cum obții: WordPress Admin → Users → click pe utilizatorul tău → jos "Application Passwords"
#   → New Application Password (nume: "Scraper") → Add New → copiază parola (ex: xxxx xxxx xxxx xxxx)
WP_USERNAME=admin
WP_APP_PASSWORD=xxxx xxxx xxxx xxxx xxxx xxxx

# Application Settings
DOWNLOAD_IMAGES=True
VERIFY_SSL=True
LOG_LEVEL=INFO
